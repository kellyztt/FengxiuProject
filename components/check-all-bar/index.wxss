/* components/check-all-bar/index.wxss */
.container{
    width: 100%;
    height: 88rpx;
    box-sizing: border-box;
    background-color: #FFF;
    box-shadow:0px 0px 4px 0px rgba(210,210,210,0.5);
    position: fixed;
    bottom: 0;
    padding-left: 30rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    z-index: 99;
}

.data-container{
    display: flex;
    flex: 1 1 auto;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.checkbox-container{
    display: flex;
    flex-direction: row;
    align-items: center;
}

.checkbox-container text{
    color: #333;
    margin-left: 30rpx;
    font-size: 24rpx;
}

.price-container{
    display: flex;
    flex-direction: row;
    align-items: center;
}

.price-container text{
    color: #333;
    margin-right: 24rpx;
    font-size: 28rpx;
}

.settlement-btn{
    width: 200rpx;
    height: 100%;
    background-color: #157658;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin-left: 24rpx;
    font-size: 28rpx;
    color: #FFF;
}

.disabled{
    opacity: 0.5;
}