/* components/realm/index.wxss */
.container{
    padding: 30rpx;
    background-color: "#fff";
}
.sku-preview{
    display: flex;
    flex-direction: row;
    margin-bottom: 30rpx;
}

.sku-img{
    width: 160rpx;
    height: 160rpx;
}

.sku-description{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 40rpx;
}

.discount-price{
    margin-left: 20rpx;
}

.price-row{
    display: flex;
    flex-direction: row;
    align-items: baseline;
}

.sku-pending{
    font-size: 20rpx;

}

.sku-pending > text:first-child{
    color: #999;
}

.sku-pending > text:nth-child(2){
    color: #666;
}
.hr{
    width: 690rpx;
    height: 2rpx;
    background-color: #E9E9E9;
}

.stock{
    margin-left: 30rpx;
    font-size: 20rpx;
    color: #999
}

.stock-pinch{
    margin-left: 30rpx;
    font-size: 20rpx;
    color: #D20109
}

.counter-container{
    margin-top: 34rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20rpx;
}

.counter-container text{
    color: #555;
    font-size: 24rpx;
}

.bottom-btn{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100rpx;
    background-color: #333;
    position: absolute;
    bottom: 0;
}
.bottom-btn text{
    color: #fff;
}

.out-stock{
    background-color: #DCEBE6;
}