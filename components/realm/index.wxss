/* components/realm/index.wxss */
.container{
    padding: 30rpx;
    background-color: #FFF;
    box-sizing: border-box;
}

.sku-preview{
    display: flex;
    flex-direction: row;
}

.sku-img{
    width: 160px;
    height: 160rpx
}

.sku-desc{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 40rpx;
}

.price-row{
    display: flex;
    flex-direction: row;
    align-items: baseline;
}

.discount-price{
    margin-left: 20rpx;
}

.sku-pending{
    font-size: 20rpx;
}

.hr{
    margin-top: 30rpx;
    width: 690rpx;
    height: 2rpx;
    background-color: #E9E9E9;
}