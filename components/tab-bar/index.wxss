/* components/tab-bar/index.wxss */
.sleeve{
    font-family: "sleeve" !important;
    color: #157658 !important;
}

.container{
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: #FFF;
}

.icons {
    width: 230rpx;
    height: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    box-sizing: border-box;
    padding-left: 16rpx;
    padding-right: 22rpx;
    justify-content: space-between;
    color: #999;
}

.icons > view {
    width: 50%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.icons > view:nth-child(2){
    padding-top: 5rpx;
}

.icons text {
    font-size: 20rpx;
}

.btn-font{
    width: 260rpx;
    height: 100%;
    color: #FFF;
    font-size: 32rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.buy{
    background-color: #157658;
}

.cart{
    background-color: #333;
}

