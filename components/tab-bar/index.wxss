.sleeve{
    font-family: 'sleeve' !important;
    color: #157658 !important;
}

.container{
    height: 100rpx;
    width: 100%;
    background-color: #fff;
    display: flex;
    flex-direction: row;
}

.icons{
    width: 230rpx;
    height: 100%;
    color: #999;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    padding-left: 16rpx;
    padding-right: 22rpx;
    box-sizing: border-box;
}

.icons > view{
    width: 50%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.icons > view:nth-child(2){
    padding-top: 4rpx;
}

.icon text{
    font-size: 20rpx;
}

.btn-font{
    color: #fff;
    font-size: 32rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.cart{
    background-color: #333;
    width:260rpx;
    height: 100%;
}

.buy{
    background-color: #157658;
    width:260rpx;
    height: 100%;
}