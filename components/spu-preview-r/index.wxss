/* components/spu-preview/index.wxss */
.container{
    width: 350rpx;
    display: flex;
    flex-direction: column;
    box-shadow:0px 0px 8px 0px rgba(119, 163, 149, 0.2);
    margin-bottom: 18rpx;
    background-color: #fff;
}

.content-container{
    display: flex;
    flex-direction: column;
    margin: 16rpx 16rpx 22rpx;
}

.img{
    width: 350rpx;
    height: 350rpx;
    display: flex;
}

.title{
    font-size: 28rpx;
    color: #333;
}

.tags{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin:6rpx 0 8rpx 0;
}

.l-tag{
    background-color: #DCEBE6 !important;
    color: #157658 !important;
    padding: 0 6rpx !important;
    height: 36rpx !important;
    margin-right: 6rpx;
}

.discount-price{
    margin-left: 20rpx;
}

.subtitle{
    font-size: 24rpx;
    font-weight: 300;
    margin-top: 6rpx;
    color: #888;
}

.price-row{
    display: flex;
    flex-direction: row;
    align-items: baseline;
}