<view class="container">
    <view class="search-container">
        <l-button width="710"
                  height="60"
                  icon="research"
                  icon-size="24"
                  icon-color="#C4C9D2"
                  shape="square"
                  l-class="search-btn"
                  bind:lintap="onGoToSearch"
        >搜索商品</l-button>
    </view>
    <view class="main">
        <l-segment
                placement="left"
                item-height="90"
                height="{{h}}"
                width="160"
                even="{{false}}"
                l-active-class="segment-item-active"
                l-inactive-class="segment-item"
                l-line-class="l-seg-line"
                scrollable
        >
            <block wx:for="{{}}" key="{{index}}">
                <l-segment-item key="{{}}" tab="{{}}"></l-segment-item>
            </block>
        </l-segment>
        <view class="right"></view>
    </view>
</view>
