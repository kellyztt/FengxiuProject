page{
    background-color: #fff;
}

.header{
    border-bottom: 1px solid #f3f3f3;
    padding-bottom: 14rpx;
    position: fixed;
    z-index: 77;
    width: 100%;
    top: 0;
}

.input{
    border-radius: 0 !important;
}

.container{
    padding-top: 70rpx;
}

.history-container{
    display: flex;
    flex-direction: column;
}

.history-title{
    display: flex;
    align-items: center;
    margin-top: 38rpx;
}

.slide{
    width: 8rpx;
    height: 46rpx;
    background-color: #157658;
    margin-right: 22rpx;
}

.icon{
    margin-right: 30rpx;
}

.history-title > text{
    font-size: 28rpx;
    color: #333;
}

.history-tags{
    width: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    margin-top: 20rpx;
    padding-left: 30rpx;
    flex-wrap: wrap;
}

.tag{
    background-color: #f3f3f3 !important;
    color: #666 !important;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}