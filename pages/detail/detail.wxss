/* pages/detail/detail.wxss */
.top{
    width: 100%;
    height: 680rpx;
}
.tabbar{
    position: fixed;
    bottom: 0;
}

.sku-pending{
    width: 100%;
    height: 80rpx;
    box-sizing: border-box;
    margin: 10rpx 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    color: #333333;
    padding:0 30rpx;
    background-color: #ffffff;
}

.spec > text {
    font-size: 24rpx;
}

.spec > text:first-child{
    color: #999999;
}

.spec > text:nth-child(2){
    color: #157658;
}

.explain{
    margin-top: 10rpx;
    padding: 20rpx 0;
    background-color: #FFF;
    display:flex;
    flex-direction:row;
    align-items:center;
    justify-content:center;
}

.detail-img{
    display: flex;
    width: 100%;
}