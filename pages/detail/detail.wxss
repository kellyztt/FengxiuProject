.top{
    width: 100%;
    height: 680rpx;
}
.tabbar{
    position: fixed;
    bottom: 0;
}

.sku-pending{
    box-sizing: border-box;
    width: 100%;
    height: 80rpx;
    background-color: #fff;
    margin: 10rpx 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    color: #333;
    padding: 0 30rpx;
}

.specs text{
    font-size: 24rpx;
}
.specs > text:first-child{
    color: #999;
}

.specs > text:nth-child(2){
    color: #157258;
}

.explain{
    margin-top: 10rpx;
    background-color: #fff;
    padding: 20rpx 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.detail-img-container{
}
.detail-image{
    display: flex;
    width: 100%;
}

